<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jqh="http://schemas.android.com/apk/res-auto" android:layout_width="60dp"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            />

        <com.jqh.duanvideo.view.IconNumView
            android:id="@+id/like_iconnumview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            jqh:normal_icon="@mipmap/dislike"
            jqh:selected_icon="@mipmap/like"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">
        </com.jqh.duanvideo.view.IconNumView>

        <com.jqh.duanvideo.view.IconNumView
            android:id="@+id/comment_iconnumview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            jqh:normal_icon="@mipmap/talks"
            jqh:selected_icon="@mipmap/talks"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">
        </com.jqh.duanvideo.view.IconNumView>

        <com.jqh.duanvideo.view.IconNumView
            android:id="@+id/send_iconnumview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            jqh:normal_icon="@mipmap/send"
            jqh:selected_icon="@mipmap/send"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            >
        </com.jqh.duanvideo.view.IconNumView>
    </LinearLayout>
</RelativeLayout>