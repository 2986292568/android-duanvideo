<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:id="@+id/follow_container">

    <ImageView
        android:id="@+id/follow_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/follow_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="14dp"
            android:textColor="@color/white"
            style="@style/textViewStyle"
            />
        <RelativeLayout
            android:id="@+id/follow_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >

            <ImageView
                android:id="@+id/follow_avatar_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/follow_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/follow_avatar_iv"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                style="@style/textViewStyle"
                android:text="胡丹"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/follow_publishdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:text="18.0km"
                style="@style/textViewStyle"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>